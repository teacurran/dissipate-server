{
  "name": "ghost-post",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --cache --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "build": "tsc",
    "build-local": "npm run env-local && tsc",
    "dev": "npm run lint && tsc -w",
    "api-dev": "nodemon src/server.ts",
    "deploy": "npm run env && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "start": "node -r ./lib/tracing lib/server",
    "env": "test -f env.json && firebase functions:config:unset env && firebase functions:config:set env=\"$(cat env.json)\" || echo \"Please add the file env.json before deploy.\"",
    "env-local": "firebase functions:config:get > .runtimeconfig.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@firebase/app": "^0.7.24",
    "@firebase/firestore": "^3.4.9",
    "@google-cloud/firestore": "^5.0.2",
    "@opentelemetry/api": "^1.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.28.0",
    "@opentelemetry/core": "^1.2.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.28.0",
    "@opentelemetry/sdk-node": "^0.28.0",
    "express": "^4.18.1",
    "express-zod-api": "^6.2.1",
    "firebase": "^9.8.1",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.1",
    "flake-idgen": "^1.4.0",
    "libhoney": "^3.1.1",
    "sequelize": "^6.19.2",
    "sequelize-typescript": "^2.1.3",
    "typesaurus": "^7.2.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^2.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "sequelize-cli": "^6.4.1",
    "sequelize-test-helpers": "^1.4.2",
    "sequelize-typescript-generator": "^8.2.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
